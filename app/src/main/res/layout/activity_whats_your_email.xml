<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_whats_your_email"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="6dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.skoovy.android.whatsYourEmailActivity">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbutton"
        android:id="@+id/backToUsernameButton"
        android:backgroundTint="@android:color/transparent"
        android:padding="10dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/skoovylogo"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="-40dp" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:text="What's your email?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:gravity="center_horizontal" />

    <TextView
        android:text="or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/textView6"
        android:textSize="15sp"
        android:textColor="#FF7F00"/>

    <Button
        android:text="Sign up with a mobile phone instead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF7F00"
        android:gravity="center_horizontal"
        android:id="@+id/signUpWithMobile"
        android:textSize="15sp"
        android:backgroundTint="@android:color/transparent"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="false"
        android:textAllCaps="false" />

    <TextView
        android:text="EMAIL"
        android:layout_marginStart="11dp"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#888888"
        android:id="@+id/textView4"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/registerYourEmail"
            android:backgroundTint="#888888"
            android:minWidth="280dp"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="#FF7F00" />


        <ImageButton
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/close"
            android:id="@+id/undoButton1"
            android:layout_alignEnd="@+id/registerYourEmail"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_marginTop="0dp" />

    </RelativeLayout>
    <TextView
        android:text=""
        android:textColor="#FF7F00"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerUsername"
        android:layout_alignStart="@+id/registerUsername"
        android:textSize="16sp"
        android:id="@+id/userTaken" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="65dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/signupgrey"
            android:id="@+id/signupButton"
            android:visibility="visible"
            android:backgroundTint="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="90dp"
            android:maxWidth="217dp" />
    </RelativeLayout>

</LinearLayout>
