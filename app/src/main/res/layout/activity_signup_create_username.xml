<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup_create_username"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="6dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.skoovy.android.signupCreateUsernameActivity">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbutton"
        android:id="@+id/backToBirthdateButton"
        android:backgroundTint="@android:color/transparent"
        android:padding="10dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/back" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/skoovylogo"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="-40dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:text="@string/create_username_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:gravity="center_horizontal" />

    <TextView
        android:text="@string/your_username_allows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:gravity="center_horizontal"
        android:id="@+id/textView6"
        android:textSize="15sp" />

    <TextView
        android:text="@string/add_you_on_skoovy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:gravity="center_horizontal"
        android:id="@+id/textView7"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerView" >

        <EditText
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/registerUsername"
            android:backgroundTint="#888888"
            android:minWidth="280dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FF7F00"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerHorizontal="true" />


        <ImageButton
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/close"
            android:id="@+id/undoButton1"
            android:layout_alignEnd="@+id/registerUsername"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-17dp"
            android:contentDescription="@string/undo" />

        <FrameLayout
            android:id="@+id/animationHoldingFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/undoButton1"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/refresh_icon"
                android:id="@+id/rotate_image"
                android:layout_marginTop="-1dp"
                android:contentDescription="@string/refresh_icon" />

        </FrameLayout>

    </RelativeLayout>
    <TextView
        android:text=""
        android:textColor="#FF7F00"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/userTaken"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/next"
            android:layout_width="190dp"
            android:layout_height="42dp"
            android:background="@drawable/roundedgreybutton"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/signupButton"
            android:layout_marginTop="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

    </RelativeLayout>

</LinearLayout>
