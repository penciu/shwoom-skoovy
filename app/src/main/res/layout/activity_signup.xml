<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="6dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.skoovy.android.signupActivity">


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbutton"
        android:id="@+id/backButton"
        android:backgroundTint="@android:color/transparent"
        android:padding="10dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/skoovylogo"
        android:id="@+id/imageButton"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="-40dp" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:layout_marginTop="0dp"
        android:text="What's your name?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:gravity="center_horizontal" />

    <TextView
        android:text="FIRST NAME"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:textColor="#888888"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="257dp"
            android:layout_height="40dp"
            android:layout_marginStart="11dp"
            android:ems="10"
            android:id="@+id/firstName"
            android:backgroundTint="#888888"
            android:minWidth="280dp"
            android:maxWidth="314dp"
            android:layout_marginTop="-5dp"
            android:inputType="textCapSentences"
            android:textColor="#FF7F00"
            android:textSize="20sp" />


        <ImageButton
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/close"
            android:id="@+id/undoButton1"
            android:layout_alignEnd="@+id/firstName"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:layout_marginRight="-17dp" />

    </RelativeLayout>

    <TextView
        android:text="LAST NAME"
        android:layout_marginStart="11dp"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textColor="#888888"
        android:id="@+id/textView4"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="257dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/lastName"
            android:backgroundTint="#888888"
            android:minWidth="280dp"
            android:maxWidth="314dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-5dp"
            android:inputType="textCapSentences"
            android:textColor="#FF7F00"
            android:textSize="20sp" />

        <ImageButton
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/close"
            android:id="@+id/undoButton2"
            android:layout_alignEnd="@+id/lastName"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_marginRight="-17dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="By clicking the button below, you agree to our"
            android:layout_width="match_parent"
            android:layout_height="26dp"

            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:layout_marginTop="-3dp" />

        <TextView
            android:text="Terms of Service"
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:id="@+id/textView10"
            android:textColor="#1F1FFF"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-8dp"
            android:textSize="14sp" />

        <TextView
            android:text="and"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:id="@+id/textView11"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:layout_marginLeft="-27dp"
            android:textSize="14sp" />

        <TextView
            android:text="Privacy Policy."
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/textView12"
            android:textColor="#1F1FFF"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_toEndOf="@+id/textView11"
            android:layout_marginStart="-10dp"
            android:textSize="14sp" />



        <Button
            android:text="sign up"
            android:layout_width="190dp"
            android:layout_height="42dp"
            android:id="@+id/signupButton"
            android:layout_below="@+id/textView10"
            android:background="@drawable/roundedgreybutton"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginBottom="68dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

    </RelativeLayout>

</LinearLayout>
