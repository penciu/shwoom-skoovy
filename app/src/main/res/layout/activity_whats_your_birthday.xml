<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_whats_your_birthday"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="6dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.skoovy.android.whatsYourBirthdayActivity">


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/backbutton"
        android:id="@+id/backButton"
        android:backgroundTint="@android:color/transparent"
        android:padding="10dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/skoovylogo"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="-40dp" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:text="What's your birthday?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textColor="#000000"
        android:gravity="center_horizontal" />

    <TextView
        android:text="  BIRTHDAY"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="29dp"
        android:textColor="#888888"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dob"
            android:backgroundTint="#888888"
            android:minWidth="280dp"
            android:maxWidth="314dp"
            android:layout_marginTop="-5dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:textSize="22sp"
            android:textColor="#FF7F00" />


        <ImageButton
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/close"
            android:id="@+id/undoButton1"
            android:layout_alignEnd="@+id/dob"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_marginTop="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="next"
            android:layout_width="190dp"
            android:layout_height="42dp"
            android:background="@drawable/roundedgreybutton"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/next"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <DatePicker
            style="@style/AppTheme"
            android:datePickerMode="spinner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/datePicker"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
