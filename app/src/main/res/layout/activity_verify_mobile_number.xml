<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verify_mobile_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ADADAD"
    tools:context="com.skoovy.android.verifyMobileNumberActivity">


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:background="@drawable/roundborder"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:text="@string/verify_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="false"
                android:id="@+id/textView1"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <TextView
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:textColor="#000000"
                android:id="@+id/selectedMobileNumber"
                android:layout_below="@+id/textView1"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal" />

            <TextView
                android:textSize="14sp"
                android:text="@string/need_to_send_verification_code"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:textColor="#000000"
                android:id="@+id/verifyCaption1"
                android:layout_below="@+id/selectedMobileNumber"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal" />

            <TextView
                android:textSize="14sp"
                android:text="@string/to_complete"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:textColor="#000000"
                android:id="@+id/verifyCaption2"
                android:layout_below="@+id/verifyCaption1"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal" />

            <Button
                android:text="@string/send_sms"
                android:layout_width="190dp"
                android:layout_height="42dp"
                android:adjustViewBounds="true"
                android:id="@+id/verifymobilenumber"
                android:visibility="visible"
                android:background="@drawable/roundedwhitebuttonorangeborder"
                android:textColor="#FF7F00"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:shadowRadius="0"
                android:layout_below="@+id/verifyCaption2" />


            <Button
                android:textStyle="normal|bold"
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                android:textColor="#FF7F00"
                android:background="#00FFFFFF"
                android:layout_below="@+id/verifymobilenumber"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
