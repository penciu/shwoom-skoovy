<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ADADAD"
    tools:context="com.skoovy.android.resetPasswordActivity">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="220dp"
        android:background="@drawable/roundborder"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:text="Choose a password"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="false"
                android:id="@+id/textView8"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <TextView
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:text="reset method below"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:textColor="#000000"
                android:id="@+id/textView13"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="65dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/email"
                android:id="@+id/resetPasswordViaEmail"
                android:visibility="visible"
                android:backgroundTint="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:baselineAlignBottom="false"
                android:maxWidth="217dp"
                android:focusable="false"
                android:layout_marginLeft="7dp"
                android:layout_below="@+id/textView13"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="65dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/mobile"
                android:id="@+id/resetPasswordViaMobile"
                android:visibility="visible"
                android:backgroundTint="@android:color/transparent"
                android:layout_gravity="center_horizontal"
                android:baselineAlignBottom="false"
                android:maxWidth="217dp"
                android:focusable="false"
                android:layout_marginLeft="7dp"
                android:layout_below="@+id/textView13"
                android:layout_alignEnd="@+id/resetPasswordViaEmail"
                android:layout_marginTop="52dp" />

            <Button
                android:textStyle="normal|bold"
                android:text="CANCEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelBackToLogIn"
                android:textColor="#FF7F00"
                android:background="?android:attr/selectableItemBackground"
                android:layout_below="@+id/resetPasswordViaMobile"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
